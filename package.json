{
  "name": "@lgriffin/esi.ts",
  "version": "1.0.0",
  "description": "This is a TypeScript Implementation for the EVE Online API offered through ESI",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node demo/examples.ts",
    "example": "ts-node src/index.ts",
    "examples:flexible": "ts-node demo/flexible-examples.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest --config jest.unit.config.cjs",
    "test:watch": "jest --config jest.unit.config.cjs --watch",
    "test:improved": "jest --config jest.unit.config.cjs --testPathPattern=improved",
    "bdd": "jest --config jest.unit.config.cjs --testPathPattern=bdd-",
    "bdd:alliance": "jest --config jest.unit.config.cjs --testPathPattern=bdd-alliance",
    "bdd:character": "jest --config jest.unit.config.cjs --testPathPattern=bdd-character",
    "bdd:corporation": "jest --config jest.unit.config.cjs --testPathPattern=bdd-corporation",
    "bdd:market": "jest --config jest.unit.config.cjs --testPathPattern=bdd-market",
    "bdd:universe": "jest --config jest.unit.config.cjs --testPathPattern=bdd-universe",
    "bdd:integration": "jest --config jest.unit.config.cjs --testPathPattern=bdd-integration",
    "bdd:performance": "jest --config jest.unit.config.cjs --testPathPattern=bdd-performance",
    "coverage": "jest --config jest.unit.config.cjs --coverage",
    "test:all": "npm run test && npm run test:improved && npm run bdd",
    "docs": "typedoc --out docs --entryPointStrategy expand src",
    "clean": "rimraf dist coverage docs",
    "prepare": "npm run build",
    "health-check": "ts-node -e \"import('./src/EsiClient').then(({EsiClient}) => new EsiClient().healthCheck().then(console.log))\""
  },
  "keywords": [],
  "author": "lgriffin",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/lgriffin/ESI.ts"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.3.16",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.5",
    "@types/winston": "^2.4.4",
    "@types/winston-loggly-bulk": "^3.0.6",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "chai": "^5.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-junit": "^16.0.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.2.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.26.10",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "plato": "^1.7.0",
    "winston": "^3.13.0",
    "winston-loggly-bulk": "^3.3.0",
    "winston-transport": "^4.7.0"
  }
}
